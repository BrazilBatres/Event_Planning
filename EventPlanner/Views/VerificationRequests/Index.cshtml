@model IEnumerable<EventPlannerModels.VerificationRequest>

@{
    ViewData["Title"] = "Index";
}

<h1>Solicitudes de Verificación</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AdminComments)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TransacDate)
            </th>
            <th>
                Administrador Encargado de Revisión
            </th>
            <th>
                Usuario solicitante
            </th>
            <th>
                Status
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AdminComments)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TransacDate)
            </td>
            <td>
                    @if (item.Admin != null)
                    {
                        <p>@item.Admin.FirstName  @item.Admin.LastName</p>
                    }
                
            </td>
            <td>
                    @item.Seller.User.FirstName @item.Seller.User.LastName
            </td>
            <td>
                @item.Status.Name
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Editar</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Detalles</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Borrar</a>
            </td>
        </tr>
}
    </tbody>
</table>
