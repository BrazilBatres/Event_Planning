    ViewData["Title"] = "Delete";
}

<h1>Eliminar Categoría</h1>

<h3>¿Estás seguro/a que quieres eliminar esta categoría?</h3>
<div>
    <h4>ItemCategory</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Category)
        </dt>
        <dd class = "col-sm-10">
