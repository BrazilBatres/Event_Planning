@model EventPlannerModels.LoginUser

@{
    Layout = "Login_Register";
    ViewData["Title"] = "Login";
}
<h1>Login</h1>

<hr />
<form asp-action="Login">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="Email" class="control-label"></label>
        <input asp-for="Email" type="email" class="form-control" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Password" class="control-label"></label>
        <input asp-for="Password" type="password" class="form-control" />
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Inicia Sesión" class="btn btn-primary" />
    </div>
</form>


<div>
    <p>¿No tienes una cuenta? <a asp-action="Register">Regístrate</a></p>
</div>

@if (TempData["errorMsg"] != null)
{
    <script type="text/javascript">
        window.onload = function () {
            Swal.fire("Comprueba tus datos", '@TempData["errorMsg"]', "warning");
        };
    </script>
}